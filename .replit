modules = ["web", "nodejs-20"]

[nix]
channel = "stable-24_05"
packages = ["nix-output-monitor"]

[[ports]]
localPort = 5000
externalPort = 80

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "sequential"
author = "agent"


[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Server"

[[workflows.workflow]]
name = "Cleaner"
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run clean:all"

[[workflows.workflow]]
name = "Type"
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run type:fast"

[[workflows.workflow]]
name = "Test"
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run test:coverage"

[[workflows.workflow]]
name = "Linter"
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run lint:fast"

[[workflows.workflow]]
name = "Formatter"
mode = "sequential"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run format"


[[workflows.workflow]]
name = "Server"
author = "agent"
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev"
waitForPort = 5000





