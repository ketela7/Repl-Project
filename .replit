modules = ["web", "nodejs-23"]

[[ports]]
localPort = 5000
externalPort = 80

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Check Format"
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run format"

[[workflows.workflow]]
name = "Check Lint"
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run lint"

[[workflows.workflow]]
name = "Check Duplicate"
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npx jscpd src"

[[workflows.workflow]]
name = "Build"
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run build"

[[workflows.workflow]]
name = "Production"
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run start"

[[workflows.workflow]]
name = "Clean Up"
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "rm -rf ~/.{npm,nvm,yarn,bun} node_modules package-lock.json .cache tsconfig.tsbuildinfo"

[[workflows.workflow]]
name = "Prepare"
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npx npm-check-updates -u"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm install"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm audit fix"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Server"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Test:Watch"

[[workflows.workflow]]
name = "Server"
author = "agent"
mode = "parallel"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev -- -p 5000 -H 0.0.0.0 --turbo"
waitForPort = 5000

[[workflows.workflow]]
name = "TypeCheck"
author = "agent"
mode = "parallel"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "tsc --noEmit --watch --preserveWatchOutput && echo \"✅ Typecheck completed successfully\""

[[workflows.workflow]]
name = "Format"
author = "agent"
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run format"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run format:fix && echo \"✅ Code formatting completed successfully\" "

[[workflows.workflow]]
name = "Lint"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run lint"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run lint:fix && echo \"✅ Code Linter completed successfully\""

[[workflows.workflow]]
name = "Test:Watch"
author = "agent"
mode = "parallel"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npx jest --watchAll"

[[workflows.workflow]]
name = "Test:RealTime"
author = "agent"
mode = "parallel"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node scripts/test-realtime-api.js && echo \"✅ Test Realtime Completed\" "

[[workflows.workflow]]
name = "Format:Fix"
author = "agent"
mode = "parallel"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run format:fix && echo \"✅ Format Completed successfully\""
