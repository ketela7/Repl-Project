modules = ["web", "bash", "nodejs-22"]
hidden = [".config", "package-lock.json"]

[gitHubImport]
requiredFiles = [".replit", "package.json"]

[nix]
channel = "stable-24_05"
packages = ["vim", "nodejs_22"]

#[interpreter]
#command = ["npm", "run", "format"]


[deployment]
run = ["npm", "start"]
deploymentTarget = "autoscale"
ignorePorts = false

[[ports]]
localPort = 3000
externalPort = 3000

[[ports]]
localPort = 5000
externalPort = 80

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "DB Reset"
mode = "sequential"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npx tsx scripts/reset-db.ts"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npx drizzle-kit push"

[[workflows.workflow]]
name = "Check Format"
mode = "sequential"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run format"

[[workflows.workflow]]
name = "Check Lint"
mode = "sequential"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run lint"

[[workflows.workflow]]
name = "Check Type"
mode = "sequential"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run typecheck"

[[workflows.workflow]]
name = "Check Duplicate"
mode = "sequential"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npx jscpd src"
author = "agent"

[[workflows.workflow]]
name = "Check:Fix"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run format:fix"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run lint:fix"

[[workflows.workflow]]
name = "Build"
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run build"

[[workflows.workflow]]
name = "Production"
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run start"

[[workflows.workflow]]
name = "Clean Up"
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "rm -rf ~/.{npm,nvm,yarn,bun} node_modules package-lock.json .cache"

[[workflows.workflow]]
name = "Prepare"
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npx npm-check-updates -u"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm install"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm audit fix"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Server"

[[workflows.workflow]]
name = "Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev -- -p 5000 -H 0.0.0.0"
waitForPort = 5000

