modules = ["web", "bash", "nodejs-20"]
hidden = [".config", "package-lock.json"]

[gitHubImport]
requiredFiles = [".replit", "replit.nix", "package.json", "package-lock.json"]

[nix]
channel = "stable-24_05"
packages = ["vim"]

[interpreter]
command = ["npm", "run", "format"]


[deployment]
run = ["npm", "start"]
deploymentTarget = "autoscale"
ignorePorts = false

[[ports]]
localPort = 3000
externalPort = 3000

[[ports]]
localPort = 5000
externalPort = 80

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Check"
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run check"

[[workflows.workflow]]
name = "Server"
mode = "sequential"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev -- -p 5000 -H 0.0.0.0 --turbo"
waitForPort = 5000

[[workflows.workflow]]
name = "DB Reset"
mode = "sequential"
author = 44095038

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npx tsx scripts/reset-db.ts"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npx drizzle-kit push"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Server"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Test Runner"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Type Checker"

[[workflows.workflow]]
name = "Test Runner"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npx jest --coverage --watchAll=false"

[[workflows.workflow]]
name = "Type Checker"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npx tsc --noEmit --watch --preserveWatchOutput"

[[workflows.workflow]]
name = "Development Server"
author = 44152367
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev -- --turbo -p 5000 -H 0.0.0.0"

