modules = ["web", "nodejs-20"]

[[ports]]
localPort = 5000
externalPort = 80

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Server"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Production Ready"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Type Check Watch"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Lint Strict"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Vercel Ready"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Lint Fast Fix"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Optimized Lint"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Quick Lint"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Auto Fix ESLint"

[[workflows.workflow]]
name = "Server"
author = "agent"
mode = "parallel"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npx next dev -p 5000 -H 0.0.0.0"
waitForPort = 5000

[[workflows.workflow]]
name = "Full Check"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run type-check"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run lint"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run format"

[[workflows.workflow]]
name = "Production Ready"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node scripts/production-ready.js"

[[workflows.workflow]]
name = "Type Check Watch"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "tsc --noEmit --watch"

[[workflows.workflow]]
name = "Lint Strict"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "eslint src --ext .ts,.tsx,.js,.jsx --max-warnings 0"

[[workflows.workflow]]
name = "Vercel Ready"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node scripts/vercel-build-fix.js full"

[[workflows.workflow]]
name = "Lint Fast Fix"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npx eslint src --fix --ext .ts,.tsx,.js,.jsx --max-warnings 10 --quiet"

[[workflows.workflow]]
name = "Optimized Lint"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node scripts/optimized-lint-workflow.js development"

[[workflows.workflow]]
name = "Quick Lint"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node scripts/optimized-lint-workflow.js quick"

[[workflows.workflow]]
name = "Auto Fix ESLint"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npx eslint src --fix --ext .ts,.tsx,.js,.jsx --max-warnings 100"

[nix]
channel = "stable-24_05"
packages = ["nix-output-monitor"]
