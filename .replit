modules = ["web", "nodejs-20"]

[[ports]]
localPort = 5000
externalPort = 80

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Server"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Production Ready"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Type Check Watch"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Lint Strict"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Vercel Ready"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Dev Strict Mode"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Lint Fast Fix"

[[workflows.workflow]]
name = "Server"
author = "agent"
mode = "parallel"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev"
waitForPort = 5000

[[workflows.workflow]]
name = "Dev Fast"
mode = "parallel"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev:fast"
waitForPort = 5000

[[workflows.workflow]]
name = "Lint"
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run lint"

[[workflows.workflow]]
name = "Format"
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run format"

[[workflows.workflow]]
name = "Full Check"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run type-check"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run lint"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run format"

[[workflows.workflow]]
name = "Test:Watch"
mode = "parallel"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npx jest --watchAll"

[[workflows.workflow]]
name = "Test:RealTime"
mode = "parallel"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node scripts/test-realtime-api.js && echo '✅ Test Realtime Completed'"

[[workflows.workflow]]
name = "Build"
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run build"

[[workflows.workflow]]
name = "Production"
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run start"

[[workflows.workflow]]
name = "Preview"
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run preview"

[[workflows.workflow]]
name = "Update Dependencies"
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npx npm-check-updates -u"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm install"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm audit fix"

[[workflows.workflow]]
name = "Clean"
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run clean"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "rm -rf ~/.{npm,nvm,yarn,bun} .cache tsconfig.tsbuildinfo"

[[workflows.workflow]]
name = "Reset Project"
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "rm -rf node_modules package-lock.json .next"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm install"

[[workflows.workflow]]
name = "Check Duplicates"
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npx jscpd src"

[[workflows.workflow]]
name = "Bundle Analyze"
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run build:analyze"

[[workflows.workflow]]
name = "Quick Format"
mode = "parallel"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run format:fix && echo '✅ Format completed successfully'"

[[workflows.workflow]]
name = "Quick Lint"
mode = "parallel"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run lint:fix && echo '✅ Lint completed successfully'"

[[workflows.workflow]]
name = "Production Ready"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node scripts/production-ready.js"

[[workflows.workflow]]
name = "Type Check Watch"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "tsc --noEmit --watch"

[[workflows.workflow]]
name = "Lint Strict"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "eslint src --ext .ts,.tsx,.js,.jsx --max-warnings 0"

[[workflows.workflow]]
name = "Vercel Ready"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node scripts/vercel-build-fix.js full"

[[workflows.workflow]]
name = "Dev Strict Mode"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node scripts/dev-strict-mode.js"

[[workflows.workflow]]
name = "Lint Fast Fix"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npx eslint src --fix --ext .ts,.tsx,.js,.jsx --max-warnings 10 --quiet"

[nix]
channel = "stable-24_05"
packages = ["nix-output-monitor"]
